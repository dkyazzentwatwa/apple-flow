# Comma-separated values are supported for these list fields.
codex_relay_allowed_senders=+15551234567
codex_relay_allowed_workspaces=/Users/cypher/Public/code/codex-flow

# Optional overrides
codex_relay_default_workspace=/Users/cypher/Public/code/codex-flow
codex_relay_poll_interval_seconds=2
codex_relay_approval_ttl_minutes=20
codex_relay_max_messages_per_minute=30
codex_relay_codex_app_server_cmd=codex app-server

# CLI connector settings (recommended - avoids state corruption)
codex_relay_use_codex_cli=true
codex_relay_codex_cli_command=codex
codex_relay_codex_cli_context_window=3

codex_relay_admin_host=127.0.0.1
codex_relay_admin_port=8787
codex_relay_messages_db_path=/Users/cypher/Library/Messages/chat.db
codex_relay_process_historical_on_first_start=false
codex_relay_notify_blocked_senders=false
codex_relay_notify_rate_limited_senders=false
codex_relay_only_poll_allowed_senders=true
codex_relay_require_chat_prefix=true
codex_relay_chat_prefix=relay:
codex_relay_suppress_duplicate_outbound_seconds=90
codex_relay_send_startup_intro=true
codex_relay_codex_turn_timeout_seconds=300

# Apple Mail integration (email as additional ingress alongside iMessage)
# Set enable_mail_polling=true and configure mail_allowed_senders to start.
# Requires Apple Mail to be running and configured on this Mac.
codex_relay_enable_mail_polling=false
codex_relay_mail_poll_account=
codex_relay_mail_poll_mailbox=INBOX
codex_relay_mail_from_address=
codex_relay_mail_allowed_senders=
codex_relay_mail_max_age_days=2
codex_relay_mail_signature=\n\nâ€”\nCodex ðŸ¤–, Your 24/7 Assistant

# Apple Reminders integration (Reminders list as task queue alongside iMessage)
# New reminders in the designated list become tasks for Codex.
# Approval conversations happen via iMessage; results are written back to the reminder.
# Requires Reminders.app running on this Mac.
codex_relay_enable_reminders_polling=false
codex_relay_reminders_list_name=Codex Tasks
codex_relay_reminders_owner=+15551234567
codex_relay_reminders_auto_approve=false
codex_relay_reminders_poll_interval_seconds=5

# Multi-workspace routing (@alias syntax in commands)
# JSON dict mapping alias names to absolute workspace paths.
# Example: task: @web-app deploy to staging
codex_relay_workspace_aliases={"web-app":"/Users/cypher/Projects/web-app","api":"/Users/cypher/Projects/api"}

# Conversation memory: auto-inject recent messages into prompts
# Set to 0 to disable, or a positive number for context window size.
codex_relay_auto_context_messages=0

# Apple Notes integration (Notes folder as long-form task workspace)
# Notes in the designated folder become tasks for Codex.
# Results are appended back to the note body.
# Requires Notes.app running on this Mac.
codex_relay_enable_notes_polling=false
codex_relay_notes_folder_name=Codex Inbox
codex_relay_notes_owner=+15551234567
codex_relay_notes_auto_approve=false
codex_relay_notes_poll_interval_seconds=10

# Apple Calendar integration (calendar events as scheduled tasks)
# Events in the designated calendar whose start time arrives become tasks.
# Results are written into the event description/notes.
# Requires Calendar.app running on this Mac.
codex_relay_enable_calendar_polling=false
codex_relay_calendar_name=Codex Schedule
codex_relay_calendar_owner=+15551234567
codex_relay_calendar_auto_approve=false
codex_relay_calendar_poll_interval_seconds=30
codex_relay_calendar_lookahead_minutes=5

# Progress streaming for long tasks
# Sends periodic progress updates via iMessage during task execution.
codex_relay_enable_progress_streaming=false
codex_relay_progress_update_interval_seconds=30

# File attachment support
# Enables reading inbound file attachments and including them in prompts.
codex_relay_enable_attachments=false
codex_relay_max_attachment_size_mb=10
codex_relay_attachment_temp_dir=/tmp/codex_relay_attachments

# Voice memo support (converts responses to audio via macOS TTS)
# Uses macOS `say` command + `afconvert` to generate M4A voice memos.
# Voice memos are sent as iMessage/Mail file attachments alongside (or instead of) text.
# Requires macOS with `say` and `afconvert` available (built-in on all Macs).
codex_relay_enable_voice_memos=false
codex_relay_voice_memo_voice=Samantha
codex_relay_voice_memo_max_chars=2000
codex_relay_voice_memo_send_text_too=true
