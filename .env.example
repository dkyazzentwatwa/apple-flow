# Comma-separated values are supported for these list fields.
codex_relay_allowed_senders=+15551234567
codex_relay_allowed_workspaces=/Users/cypher/Public/code/codex-flow

# Optional overrides
codex_relay_default_workspace=/Users/cypher/Public/code/codex-flow
codex_relay_poll_interval_seconds=2
codex_relay_approval_ttl_minutes=20
codex_relay_max_messages_per_minute=30
codex_relay_codex_app_server_cmd=codex app-server

# CLI connector settings (recommended - avoids state corruption)
codex_relay_use_codex_cli=true
codex_relay_codex_cli_command=codex
codex_relay_codex_cli_context_window=3

codex_relay_admin_host=127.0.0.1
codex_relay_admin_port=8787
codex_relay_messages_db_path=/Users/cypher/Library/Messages/chat.db
codex_relay_process_historical_on_first_start=false
codex_relay_notify_blocked_senders=false
codex_relay_notify_rate_limited_senders=false
codex_relay_only_poll_allowed_senders=true
codex_relay_require_chat_prefix=true
codex_relay_chat_prefix=relay:
codex_relay_suppress_duplicate_outbound_seconds=90
codex_relay_send_startup_intro=true
codex_relay_codex_turn_timeout_seconds=300

# Apple Mail integration (email as additional ingress alongside iMessage)
# Set enable_mail_polling=true and configure mail_allowed_senders to start.
# Requires Apple Mail to be running and configured on this Mac.
codex_relay_enable_mail_polling=false
codex_relay_mail_poll_account=
codex_relay_mail_poll_mailbox=INBOX
codex_relay_mail_from_address=
codex_relay_mail_allowed_senders=
